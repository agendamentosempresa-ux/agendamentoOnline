// Cria e exporta o cliente Supabase usando variáveis de ambiente VITE_
// Nota: por padrão usamos a ANON key. Se você desejar usar a Service Role Key (não recomendado em produção
// por expor a chave no frontend) coloque VITE_SUPABASE_SERVICE_ROLE_KEY no .env e o client irá utilizá-la.
import { createClient } from '@supabase/supabase-js';

const SUPABASE_URL = import.meta.env.VITE_SUPABASE_URL as string;
const SUPABASE_ANON_KEY = import.meta.env.VITE_SUPABASE_ANON_KEY as string | undefined;
const SUPABASE_SERVICE_ROLE_KEY = import.meta.env.VITE_SUPABASE_SERVICE_ROLE_KEY as string | undefined;

// Prefer service role key when explicitly provided
const SUPABASE_KEY = SUPABASE_SERVICE_ROLE_KEY || SUPABASE_ANON_KEY;

if (!SUPABASE_URL || !SUPABASE_KEY) {
  console.warn('Supabase environment variables (VITE_SUPABASE_URL and VITE_SUPABASE_ANON_KEY or VITE_SUPABASE_SERVICE_ROLE_KEY) não estão definidas.');
}

export const supabase = createClient(SUPABASE_URL, SUPABASE_KEY as string);
